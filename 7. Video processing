import cv2
cap = cv2.VideoCapture(0)
print("Press 'q' to exit")
while True:
    ret, frame = cap.read()
    if not ret:
        break
    cv2.imshow("Video", frame)
    key = cv2.waitKey(30)  
    if key == ord('s'):  
        cv2.waitKey(100)
    elif key == ord('f'): 
        cv2.waitKey(5)
    elif key == ord('q'):
        break
cap.release()
cv2.destroyAllWindows()
